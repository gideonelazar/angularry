{
  "branches": [
    {
      "name": "master"
    },
    {
      "name": "next",
      "channel": "next",
      "prerelease": "next"
    },
    {
      "name": "beta",
      "channel": "beta",
      "prerelease": "beta"
    }
  ],
  "npmPublish": true,
  "verifyConditions": [
    "@semantic-release/changelog",
    "@semantic-release/git",
    "@semantic-release/npm"
  ],
  "prepare": [
    "@semantic-release/changelog",
    "@semantic-release/git",
    {
      "path": "@semantic-release/git",
      "assets": [
        "package.json",
        "package-lock.json",
        "CHANGELOG.md"
      ],
      "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
    }
  ],
  "analyzeCommits": {
    "preset": "angular",
    "releaseRules": [
      {
        "type": "docs",
        "scope": "README",
        "release": "patch"
      },
      {
        "type": "refactor",
        "release": "patch"
      },
      {
        "type": "style",
        "release": "patch"
      }
    ],
    "parserOpts": {
      "noteKeywords": [
        "BREAKING CHANGE",
        "BREAKING CHANGES",
        "BREAKING"
      ]
    }
  },
  "publish": [
    {
      "path": "@semantic-release/github",
      "assets": "dist/krembo/*.tgz"
    },
    {
      "path": "@semantic-release/exec",
      "cmd": "echo ${nextRelease.version}"
    },
    {
      "path": "@semantic-release/npm",
      "npmPublish": true
    }
  ],
  "git": {
    "assets": [
      "dist/**/*.{js,css}",
      "docs",
      "package.json"
    ],
    "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
  },
  "notesGenerator": {
    "preset": "angular",
    "parserOpts": {
      "noteKeywords": [
        "BREAKING CHANGE",
        "BREAKING CHANGES",
        "BREAKING"
      ]
    },
    "writerOpts": {
      "commitsSort": [
        "subject",
        "scope"
      ]
    }
  }
}
